{
  "name": "@jsdrome/boilerplate",
  "version": "1.2.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "release": "release-it --no-npm.publish",
    "version": "echo $npm_package_version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jsDrome/boilerplate.git"
  },
  "keywords": [
    "jsdrome",
    "boilerplate"
  ],
  "author": "Sreeram Padmanabhan",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jsDrome/boilerplate/issues"
  },
  "homepage": "https://github.com/jsDrome/boilerplate#readme",
  "devDependencies": {
    "@jsdrome/commitlint-config": "^1.1.0",
    "@jsdrome/eslint-config": "^1.1.0",
    "husky": "^4.2.5",
    "release-it": "^13.5.6"
  },
  "eslintConfig": {
    "extends": "@jsdrome/eslint-config"
  },
  "commitlint": {
    "extends": [
      "@jsdrome/commitlint-config"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release-it": {
    "git": {
      "changelog": "git log --pretty=format:\"* %s (%h)\" ${latestTag}...HEAD",
      "requireCleanWorkingDir": false,
      "requireUpstream": true,
      "requireCommits": false,
      "addUntrackedFiles": false,
      "commit": true,
      "commitMessage": "release: ${version}",
      "commitArgs": "",
      "tag": true,
      "tagName": "v${version}",
      "tagAnnotation": "Release ${version}",
      "tagArgs": "",
      "push": true,
      "pushArgs": "--follow-tags",
      "pushRepo": "origin"
    },
    "hooks": {
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    }
  }
}
